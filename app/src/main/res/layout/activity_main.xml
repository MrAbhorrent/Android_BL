<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/stdMargin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_weight="1">

    <TextView
        android:id="@+id/CityLocation"
        android:layout_marginTop="@dimen/stdMargin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:text="@string/DefaultSelectionCity"
        android:background="@color/colorAccent"/>

    <ImageView
        android:id="@+id/WeatherCondition"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/stdMargin"
        android:layout_marginBottom="@dimen/stdMargin"
        android:layout_weight="0.4"
        android:src="@drawable/ic_baseline_wb_sunny_24"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.5">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/stdMargin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Пример текста"/>
        </ScrollView>
    </LinearLayout>

</LinearLayout>